<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Nombre"
        android:textSize="14dp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />


    <TextView
        android:id="@+id/label_pr_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Primer Apellido"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/pr_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_pr_apellido"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Primer Apellido"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textColor="#070707"
        android:textColorHint="@color/cardview_shadow_start_color" />

    <TextView
        android:id="@+id/label_sg_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pr_apellido"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Segundo Apellido"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/sg_apellido"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_sg_apellido"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Segundo Apellido"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />
    <!--TextView
        android:id="@+id/label_rol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sg_apellido"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Rol"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/rol"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_rol"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Rol"
        android:inputType="number"
        android:padding="10dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" /-->
    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sg_apellido"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:padding="5dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />

    <TextView
        android:id="@+id/label_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Usuario"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_usuario"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Usuario"
        android:padding="5dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />

    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Password"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_password"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Password"
        android:padding="5dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />
    <!--TextView
        android:id="@+id/label_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Estado"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/estado"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_estado"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Estado"
        android:padding="10dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" />
    <TextView
        android:id="@+id/label_condicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/estado"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Condicion"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/condicion"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_condicion"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Condicion"
        android:padding="10dip"
        android:textColor="#090909"
        android:textColorHint="@color/cardview_shadow_start_color" /-->
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="Guardar"
        android:textColor="@android:color/white" />

</RelativeLayout>
